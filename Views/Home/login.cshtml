@using BankAccts
@model BankAccts.Models.LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="jumbotron">
    <a href="/"><button class="btn btn-default" style="float: right">Register</button></a>
    <h1>LOGIN</h1>
</div>

<Form class="form" asp-controller="Home" asp-action="processLogin" method="post">
    
    <span asp-validation-for="Email"></span>
    <br>
    <label asp-for="Email"></label>
    <input asp-for="Email" class="form-control" autofocus>

    <span asp-validation-for="Password"></span>
    <br>
    <label asp-for="Password"></label>
    <input asp-for="Password" class="form-control"><br>

    <input type="submit" class="btn btn-success submit">

</Form>